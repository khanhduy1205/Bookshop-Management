<div class="main">
    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form validate-form">
                    <h2 class="form-title">Đăng ký</h2>

                    <form method="POST" action="/register" class="register-form" id="register-form">
                        <div class="form-group">
                            <label for="name"><i class="fa-solid fa-user input-icon"></i></label>
                            <input type="text" name="fullname" id="nameRegex" placeholder="Họ và tên" required />
                        </div>

                        <span>
                            <p class="validInput" id="fullnameValid" style="color:red; font-size:12px"></p>
                        </span>

                        <div class="form-group">
                            <label for="username"><i class="fa-regular fa-user input-icon"></i></label>
                            <input type="text" name="username" id="usernameRegex" placeholder="Tên đăng nhập"
                                required />
                        </div>

                        <span>
                            <p class="validInput" id="usernameValid" style="color:red; font-size:12px">{{usnErr}}</p>
                        </span>

                        <div class="form-group">
                            <label for="phone"><i class="fa-solid fa-phone input-icon"></i></label>
                            <input type="phone" name="phone" id="phoneRegex" placeholder="Điện thoại" required />
                        </div>

                        <span>
                            <p class="validInput" id="phoneValid" style="color:red; font-size:12px"></p>
                        </span>

                        <div class="form-group">
                            <label for="email"><i class="fa-solid fa-envelope input-icon"></i></label>
                            <input type="email" name="email" id="emailRegex" placeholder="Email" required />
                        </div>

                        <span>
                            <p class="validInput" id="emailValid" style="color:red; font-size:12px"></p>
                        </span>

                        <div class="form-group">
                            <label for="addr"><i class="fa-solid fa-house input-icon"></i></label>
                            <input type="address" name="addr" id="addr" placeholder="Địa chỉ" required />
                        </div>

                        <div class="form-group">
                            <label for="pass"><i class="fa-solid fa-lock input-icon"></i></label>
                            <input type="password" name="pass" id="passRegex" placeholder="Mật khẩu" required />
                        </div>

                        <span>
                            <p class="validInput" id="passValid" style="color:red; font-size:12px"></p>
                        </span>

                        <div class="form-group">
                            <label for="re-pass"><i class="fa-solid fa-rotate-right input-icon"></i></label>
                            <input type="password" name="re_pass" id="repass" placeholder="Xác nhận mật khẩu"
                                required />
                        </div>

                        {{#if rePwdErr}}
                        <span>
                            <p class="validInput" id="repassValid" style="color:red; font-size:12px">{{rePwdErr}}
                            </p>
                        </span>
                        {{/if}}

                        <span>
                            <p class="validInput" id="repassValid" style="color:red; font-size:12px"></p>
                        </span>

                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng ký" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="./images/signup_image.jpg" alt="sign up image"></figure>
                    <a href="/login" class="signup-image-link">Đã có tài khoản!</a>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- JS -->
<script src="./js/jquery-3.6.1.min.js"></script>
<script src="./js/validation.js"></script>