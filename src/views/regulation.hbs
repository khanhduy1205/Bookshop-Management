<h2 class="main__title">Quy định</h2>


<ul class="rule__menu">
    <a href="/regulation/update" class="rule__btn"><i class="fa-solid fa-pen-to-square icon"></i>Cập nhật</a>
</ul>

<div class="main__content">
    <div class="table-responsive rounded">
        <table class="table table-striped table-hover text-start table-bordered m-0">
            <thead>
                <tr>
                    <th scope="col"><i class="fa-regular fa-square"></i></th>
                    <th scope="col">Tên quy định</th>
                    <th scope="col">Nội dung</th>
                    <th scope="col">Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                {{#each regulation}}
                <tr>
                    <th scope="row" class="text-center">
                        <input type="checkbox">
                    </th>
                    <td>{{this.regulationName}}</td>
                    <td>{{this.content}} {{#if (notZero this.value)}} {{this.value}} {{/if}}</td>
                    {{#if this.status}}
                        <td>Đang áp dụng</td>
                    {{else}}
                        <td>Vô hiệu hóa</td>
                    {{/if}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{>pagination}}