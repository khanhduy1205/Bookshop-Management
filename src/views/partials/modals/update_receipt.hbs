<div class="modal fade" id="updateReceiptModal">
    <div class="modal-container">
        <div class="modal-content">
            <form action="/receipt/update" method="post">
                <div class="modal-header">
                    <h2 class="modal-title">Phiếu thu tiền</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-row">
                        <label for="receiptID" class="form-label">Mã phiếu thu</label>
                        <input type="text" name="receiptID" id="receiptID" class="form-input" value="" required readonly>
                    </div>
                    <div class="form-row">
                        <label for="customerID" class="form-label">Mã khách hàng</label>
                        <input type="text" name="customerID" id="customerID" class="form-input" value="" required>
                    </div>
                    <div class="form-row">
                        <label for="fullname" class="form-label">Họ tên khách hàng</label>
                        <input type="text" name="fullname" id="fullname" class="form-input" value="" required>
                    </div>
                    <div class="form-row">
                        <label for="addr" class="form-label">Địa chỉ</label>
                        <input type="text" name="addr" id="addr" class="form-input" value="" required>
                    </div>
                    <div class="form-row">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-input" value="" required>
                    </div>
                    <div class="form-row short">
                        <div class="phone">
                            <label for="phone" class="form-label">Điện thoại</label>
                            <input type="text" name="phone" id="phone" class="form-input" value="" required >
                        </div>
                        <div class="date">
                            <label for="date" class="form-label">Ngày thu tiền</label>
                            <input type="date" name="date" id="date" class="form-input" value="" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <label for="amount-paid" class="form-label">Số tiền thu</label>
                        <input type="text" pattern="\d*" name="amountPaid" id="amount-paid" class="form-input" value="" required>
                        
                        <span>
                            <p id="receipt-error" style="color:red; font-size:14px; margin: 8px 0 0 4px;"></p>
                        </span>
                    </div>

                    <div class="form-row">
                        <input type="checkbox" name="applyRule" id="applyRule">
                        <label for="applyRule">Thu nợ (Áp dụng quy định 4)</label>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" name="ok-btn" class="btn btn-primary">Hoàn tất</button>
                </div>
            </form>

        </div>
    </div>
</div>

